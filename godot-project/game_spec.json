{
  "game": {
    "name": "Temple Run",
    "type": "2D",
    "description": "Endless runner where you play as an explorer escaping an ancient temple guardian. Switch lanes, jump, and slide while collecting coins and avoiding obstacles.",
    "genre": "endless_runner",
    "version": "1.0.0"
  },
  "settings": {
    "window": {
      "width": 1280,
      "height": 720,
      "resizable": true,
      "fullscreen": false
    },
    "physics": {
      "enabled": true,
      "gravity": 1800
    },
    "rendering": {
      "method": "forward_plus"
    }
  },
  "player": {
    "name": "Explorer",
    "health": 1,
    "speed": 300,
    "abilities": ["lane_switch", "jump", "slide", "collect"],
    "lanes": [200, 400, 600]
  },
  "entities": {
    "obstacles": [
      {
        "name": "Wall",
        "type": "wall",
        "height": 80,
        "avoid_by": "slide"
      },
      {
        "name": "Low Barrier",
        "type": "low",
        "height": 30,
        "avoid_by": "jump"
      }
    ],
    "collectibles": [
      {
        "name": "Coin",
        "value": 10,
        "type": "coin",
        "rarity": "common"
      },
      {
        "name": "Gem",
        "value": 50,
        "type": "gem",
        "rarity": "rare"
      },
      {
        "name": "Relic",
        "value": 100,
        "type": "relic",
        "rarity": "legendary"
      }
    ],
    "powerups": [
      {
        "name": "Shield",
        "duration": 5,
        "effect": "protect_from_one_hit"
      },
      {
        "name": "Speed Boost",
        "duration": 5,
        "effect": "increase_speed_50%"
      },
      {
        "name": "Magnet",
        "duration": 10,
        "effect": "attract_nearby_coins"
      }
    ]
  },
  "gameplay": {
    "mechanics": {
      "lane_switching": true,
      "jumping": true,
      "sliding": true,
      "endless_generation": true,
      "difficulty_scaling": true
    },
   

    "scoring": {
      "distance_points": 1,
      "coin_points": 10,
      "gem_points": 50,
      "relic_points": 100,
      "multiplier_base": 1.0,
      "multiplier_max": 5.0
    },
    "difficulty": {
      "initial_speed": 300,
      "max_speed": 600,
      "speed_increase_rate": 1.05,
      "increase_interval": 10,
      "obstacle_density_min": 2,
      "obstacle_density_max": 4,
      "collectible_density_min": 3,
      "collectible_density_max": 6
    },
    "world": {
      "chunk_height": 400,
      "spawn_distance": 800,
      "despawn_distance": 200,
      "lane_count": 3,
      "lane_positions": [200, 400, 600]
    }
  },
  "scenes": [
    {
      "name": "StartScreen",
      "path": "res://scenes/StartScreen.tscn",
      "type": "UI"
    },
    {
      "name": "Main",
